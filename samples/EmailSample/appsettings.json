{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Email": {
      "LogLevel": {
        "Default": "Warning"
      },
      "ApplicationName": "EmailSample",
      "Smtp": {
        "Host": "mail.mydomain.com",
        "Port": 587,
        "Credentials": {
          "Username": "username@mydomain.com",
          "Password": "passord"
        }
      },
      "From": {
        "Address": "username@mydomain.com",
        "DisplayName": "Email Sample Logger"
      },
      "To": [
        {
          "Address": "alerts@mydomain.com",
          "DisplayName": "Alert Inbox"
        }
      ],
      "ThrottleTimeout": "00:00:10"
    }
  },
  "AllowedHosts": "*"
}
